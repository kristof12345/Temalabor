<Page
    x:Class="Desktop.Views.PlanePage"
    x:Name="PlaneDeckPlan"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Desktop.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrols="using:Desktop.UserControls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid x:Name="grid">
        <Button Content="Pay" HorizontalAlignment="Left" Margin="25,200,0,0" VerticalAlignment="Top" Click="Button_Click" Width="100"/>
        <Image x:Name="planeImg" Source="/Assets/Antonov124white.png" HorizontalAlignment="Right" Width="700" Height="700" VerticalAlignment="Top" />
        <TextBlock x:Name="txDetails"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="25,0,0,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
        />
        <TextBlock x:Name="txPrice"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="25,100,0,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
        />
        <Canvas x:Name="myList" Width="700" HorizontalAlignment="Right" Height="700" VerticalAlignment="Top">
        </Canvas>
    </Grid>
</Page>
